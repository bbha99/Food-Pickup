<!DOCTYPE html>
<html lang="en">

<head>
  <title>Admin Home Page</title>

  <meta charset="UTF-8" >
  <meta http-equiv="X-UA-Compatible" content="IE=edge" >
  <meta name="viewport" content="width=device-width, initial-scale=1.0" >

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />
  <link rel="stylesheet" href="/styles/main.css" />
  <link rel="stylesheet" href="/styles/layout.css" />
  <link rel="stylesheet" href="/styles/nav.css" />

  <script src="/vendor/jquery-3.0.0.js"></script>
  <script defer src="/scripts/app.js"></script>
  <script defer src="/scripts/addForm.js"></script>
</head>

<body id="admin">
  <nav class="nav-container">
    <span id="nav-logo">UberEatsPickup</span>
    <ul id="nav-options">
      <li><a href="/menu">Home</a></li>
      <li><a href="/order/history/admin">View Orders</a></li>
      <li>
        <form method = "POST" action = "/users/logout">
          <button style="border-radius: 5px;border-color:#90b3d8">Logout</button>
        </form>
      </li>
    </ul>
  </nav>
  <img style="width:100%;" class="homepage-image" src="https://japanhousegoodlettsvilletn.com/wp-content/uploads/2020/04/%E6%97%A5%E9%A4%90-18.jpg" alt="food item" height="350px">
  <main id="main-container" class="menu">
    <section class="menu-food">
      <div class="menu-header">
        <h2 id="name"><strong>Sushi Emporium</strong></h2>
        <div>Open 11:00 AM - 10:00 PM</div>
        <div>Address: 1920 W 4th Ave, Vancouver, B.C.</div>
        <div>Phone: 604-779-3709</div>
        <div>Pick-Up Only</div>
        <br>
        <div class="social-media">
          <i class="fa-brands fa-facebook"></i>
          <i class="fa-brands fa-instagram icon-4x"></i>
          <i class="fa-brands fa-square-twitter icon-4x"></i>
        </div>
      </div>
      <section class="menu-items"></section>
    </section>

    <section class="menu-cart">
        <form action="/tweets/" method="post" class="new-tweet-form">
          <label for="name"><strong>name:</strong></label>
          <input type="text" name="name" id="name"></input>

          <label for="description"><strong>description:</strong></label>
          <input type="text" name="description" id="description"></input>

          <label for="image"><strong>Image Url:</strong></label>
          <input type="url" name="image" id="image"></input>

          <label for="price"><strong>Price:</strong></label>
          <input type="number" name="price" id="price" step="any"></input>

          <button type="submit" id="add-food">Add Item</button>
          <p id="create-error"></p>
        </form>
    </section>
  </main>

</body>

</html>
